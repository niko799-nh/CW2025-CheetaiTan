<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.comp2042.StartMenuController"
            prefWidth="500" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom, #101020, #1b1b3a);">

    <children>

        <!-- Title -->
        <Label text="玩玩啊你以为"
               layoutX="120" layoutY="120"
               style="-fx-font-size: 42px; -fx-text-fill: white; -fx-font-weight: bold;"/>

        <!-- Start Button -->
        <Button fx:id="startButton" text="▶ START GAME"
                layoutX="170" layoutY="280"
                prefWidth="160" prefHeight="45"
                style="-fx-background-color: green; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 8;"
                onAction="#startGame"/>

        <!-- Bestscore -->
        <Label fx:id="bestScoreLabel"
               text="🏆 Best Score: 0"
               layoutX="165" layoutY="190"
               style="-fx-font-size: 18px; -fx-text-fill: gold; -fx-font-weight: bold;"/>


        <Label text="by ゲームオーバー"
               layoutX="200" layoutY="500"
               style="-fx-font-size: 14px; -fx-text-fill: #aaaaaa;"/>

    </children>
</AnchorPane>